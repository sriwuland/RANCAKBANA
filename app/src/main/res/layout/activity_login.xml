<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sunset"
    tools:context="com.example.asus.tubes.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="60dp"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rancak Bana"
            android:textSize="50dp"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:textColor="#a00037"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login with"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="10dp"
            android:gravity="center" />
    </LinearLayout>


    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.shaishavgandhi.loginbuttons.GoogleButton
            android:id="@+id/btn_google"
            android:onClick="logGoogle"
            app:roundedCorner="true"
            app:roundedCornerRadius="65dp"
            android:layout_width="65dp"
            android:layout_height="65dp" />
        <com.shaishavgandhi.loginbuttons.FacebookButton
            android:id="@+id/btn_facebook"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:roundedCorner="true"
            app:roundedCornerRadius="65dp"
            android:layout_width="65dp"
            android:layout_height="65dp"/>

        <com.facebook.login.widget.LoginButton
            android:layout_margin="4dp"
            android:id="@+id/lgn_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>